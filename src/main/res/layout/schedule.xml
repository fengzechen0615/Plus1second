<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.francisfeng.plus1second.Schedule"
    android:id="@+id/main_layout"
    android:background="@drawable/book">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04"
            android:background="@drawable/background_pink"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:background="#EED5D2"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="MON"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="TUE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="WED"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="THUR"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="FRI"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="SAT"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="2.0"
                android:text="SUN"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="2" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="3" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="4" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="5" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="6" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="7" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="8" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="9" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="11" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_gery"
                    android:gravity="center"
                    android:maxEms="1"
                    android:text="12" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="@drawable/background_lightgreen"
                android:orientation="horizontal"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/tue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="@drawable/background_lightblue"
                android:orientation="horizontal"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/wed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1."
                android:alpha="0.8"
                android:background="@drawable/background_lightgreen"
                android:orientation="horizontal"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/thu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="@drawable/background_lightblue"
                android:orientation="horizontal"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/fri"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="@drawable/background_lightblue"
                android:orientation="horizontal"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/sat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="@drawable/background_lightgreen"
                android:orientation="horizontal"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/sun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:alpha="0.8"
                android:background="@drawable/background_lightblue"
                android:orientation="horizontal"></RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
